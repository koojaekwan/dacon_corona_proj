num_confirmed_sorted = num_confirmed.astype(np.int)
num_confirmed_sorted.sort()
num_confirmed_sorted = num_confirmed_sorted[::-1]
largest = num_confirmed_sorted[0]
sec_largest = num_confirmed_sorted[1]
